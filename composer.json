{
    "name": "kode/console",
    "description": "健壮、通用的 PHP 控制台组件",
    "keywords": ["console", "cli", "command", "kode"],
    "homepage": "https://github.com/kodephp/console",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "KodePHP Team",
            "email": "team@kodephp.com"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "phpstan/phpstan": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Kode\\Console\\": "src/",
            "Kode\\Console\\Examples\\": "examples/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Kode\\Console\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan analyse src --level=9"
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}